{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard",
        "plugin:import/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": [2, "always"],
        "comma-dangle": "off"
    },
    "settings": {
        // "import/resolver": {
        //     "extensions": [
        //         ".js", 
        //         ".jsx"
        //     ],
        //     "paths": [
        //         "./src"
        //     ]
        // },
        "import/order": [2, {
            "alphabetize": {
                "order": "asc"
            }
        }]
    }
}
