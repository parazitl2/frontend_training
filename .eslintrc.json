{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard",
        "plugin:react/recommended",
        "plugin:import/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "import"
    ],
    "rules": {
        "semi": [2, "always"],
        "comma-dangle": "off",
        "import/no-unresolved": 0,
        "import/export": 2,
        "import/order": [2, {
            "alphabetize": {
                "order": "asc",
                "caseInsensitive": true
            },
            "newlines-between": "always"
        }],
        "import/newline-after-import": 2
    },
    "settings": {}
}
